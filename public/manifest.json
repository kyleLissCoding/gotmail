{
  "manifest_version": 3,
  "name": "GotMail Assistant",
  "version": "0.1.0",
  "description": "AI Email Assistant and Notifier for Chrome Browser users",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
} 